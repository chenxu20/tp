<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <HBox minHeight="30.0" minWidth="60.0" spacing="5.0" >
        <Label alignment="CENTER" layoutX="7.0" layoutY="9.0" minWidth="60.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #393e44;"
               text="Deals" textAlignment="CENTER" >
        </Label>
        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@/images/deal.png"/>
        </ImageView>
    </HBox>
    <ListView fx:id="dealListView" VBox.vgrow="ALWAYS" />
</VBox>
